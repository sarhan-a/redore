<div class="container">
  <h2>Customer Reviews</h2>
  <% if @listing.reviews.present? %>
    <p>⭐<%= @listing.average_rating.round(2) %> out of 5</p>
    <p><strong><%= @listing.reviews.count %> Reviews</strong></p>
      <% @listing.reviews.each do |review| %>
        <div class="card">
          <p>Rating: <%= '⭐' * review.rating%></p>
          <p>Comments: <%= review.content %></p>
        </div>
      <% end %>
  <% else %>
    <p> No reviews yet </p>
  <% end %>
</div>
